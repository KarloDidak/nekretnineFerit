<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="h4">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h4_text_size</item>
    </style>

    <style name="h3">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3_text_size</item>
    </style>

    <style name="h2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h2_text_size</item>
    </style>

    <style name="btn_blue">
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h2_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn_blue_grey">
        <item name="android:background">@drawable/bg_btn_blue_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h2_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="et_blue_grey">
        <item name="android:background">@drawable/bg_btn_blue_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
    </style>

    <style name="tab_selected">
        <item name="android:textSize">@dimen/h3_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>